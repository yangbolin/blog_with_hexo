<article class="page">
  <% if(page.title) { %>
  <h1 class="title"><%= page.title %></h1>
  <% } %>
  <div class="entry-content"><%- page.content %></div>
</article>
<% if(site.disqus_short_name && page.comments) { %>
<section id="comment">
    <h1 class="title"><%= __('comment') %></h1>
    <div id="disqus_thread" aria-live="polite">
      <%- partial('_partial/post/disqus_thread.html')%>
    </div>
</section>
<% } else if (theme.duoshuo_shortname && page.comments){ %>
<section id="comment">
    <h1 class="title"><%= __('comment') %></h1>
    <div id="duoshuo_thread" aria-live="polite">
      <%- partial('_partial/post/duoshuo_thread.html')%>
    </div>
</section>
<% } %>
