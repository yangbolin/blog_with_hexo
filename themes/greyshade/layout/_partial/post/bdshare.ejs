<div class="share">
  <div id="bdshare" class="bdshare_t bds_tools get-codes-bdshare">
    <% if(theme.bdshare.douban) { %> <a class="bds_douban"></a> <% } %>
    <% if(theme.bdshare.qzone) { %> <a class="bds_qzone"></a> <% } %>
    <% if(theme.bdshare.renren) { %> <a class="bds_renren"></a> <% } %>
    <% if(theme.bdshare.tsina) { %> <a class="bds_tsina"></a> <% } %>
    <% if(theme.bdshare.tqq) { %> <a class="bds_tqq"></a> <% } %>
    <% if(theme.bdshare.twi) { %> <a class="bds_twi"></a> <% } %>
    <% if(theme.bdshare.fbook) { %> <a class="bds_fbook"></a> <% } %>
    <% if(theme.bdshare.hi) { %> <a class="bds_hi"></a> <% } %>
